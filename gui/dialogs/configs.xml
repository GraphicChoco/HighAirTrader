<?xml version="1.0" encoding="UTF-8"?>
<!-- this file requires FlightGear version 2018.2 or newer -->
<PropertyList>
	<name>configs</name>
	<layout>vbox</layout>
	<width>300</width>

	<group>
		<layout>hbox</layout>
		<empty>
			<stretch>1</stretch>
		</empty>
		<text>
			<label>HighAirTrader Configuration</label>
		</text>
		<empty>
			<stretch>1</stretch>
		</empty>
		<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend></legend>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
	<hrule />

	<combo>
		<!--<halign>right</halign>
		<pref-width>150</pref-width>-->
		<property>/sim/highairtrader/configs/currency</property>
		<value>Dollars</value>
		<value>Pounds</value>
		<value>Euros</value>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</combo>

	<button>
		<legend>Close</legend>
		<binding>
			<command>dialog-close</command>
		</binding>
	</button>
</PropertyList>